datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model KnownFaces {
  id          Int    @id @default(autoincrement())
  name        String
  email       String @unique
  image       String
  descriptors String // Storing descriptors as a string
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
